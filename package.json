{
  "name": "space-tourism-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier . --ignore-path .gitignore --write",
